<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="msg_application_second_stage" model="message_template">
            <field name="subject">Zgłoszenie zaakceptowane!</field>
            <field name="body"><![CDATA[
                Twoje zgłoszenie do "${record.offer.name}" przeszło pierwszy etap rekrutacji.
                Wkrótce otrzymasz szczegóły dalszego postępowania.
                <br/>
                <br/>
                Zespół
                <br/>
                ${site_name}
            ]]></field>
            <field name="model">offers.application</field>
        </record>
        <record id="msg_new_application_admin" model="message_template">
            <field name="subject">Zgłoszenie</field>
            <field name="body"><![CDATA[
                Nowe zgłoszenie do "${record.offer.name}".
            ]]></field>
            <field name="model">offers.application</field>
        </record>
    </data>
</openerp>
