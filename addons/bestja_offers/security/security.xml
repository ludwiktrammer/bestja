<openerp>
    <data>
        <record id="offer_read_rule" model="ir.rule">
            <field name="name">Offer can be read when its published or by the coordinator</field>
            <field name="model_id" ref="model_offer"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">[
                '|',
                    ('state', '=', 'published'),
                '|',
                    ('project.organization.coordinator.id', '=', user.id),
                    ('project.manager.id', '=', user.id)
            ]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="offer_modify_rule" model="ir.rule">
            <field name="name">Offer can be modified by the coordinator only</field>
            <field name="model_id" ref="model_offer"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">[
                '|',
                    ('project.organization.coordinator.id', '=', user.id),
                    ('project.manager.id', '=', user.id)
            ]</field>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="offer_application_rule" model="ir.rule">
            <field name="name">Applications can be viewed and modified by coordinators and project managers only.</field>
            <field name="model_id" ref="model_offers_application"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">[
                '|',
                    ('offer.project.organization.coordinator.id', '=', user.id),
                    ('offer.project.manager.id', '=', user.id),
            ]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="offer_application_rule" model="ir.rule">
            <field name="name">Applications can be read by applicants themselves (needed by workflows to work!).</field>
            <field name="model_id" ref="model_offers_application"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">[
                    ('user.id', '=', user.id),
            ]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</openerp>
