<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <template id="new_footer" inherit_id="website.layout" name="New footer">
            <xpath expr="//footer" position="replace">
                <footer id="footer_container">
                    <div class="footer_div">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-12">
                                    <ul class="footer-social-icons-wrapper pull-right">
                                        <li>
                                            <a t-att-href="website.social_facebook" target="_blank">
                                                <span class="fa-stack fa-lg">
                                                    <i class="fa fa-circle fa-stack-2x"></i>
                                                    <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="https://twitter.com/banki_zywnosci" target="_blank">
                                                <span class="fa-stack fa-lg">
                                                    <i class="fa fa-circle fa-stack-2x"></i>
                                                    <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a t-att-href="website.social_youtube" target="_blank">
                                                <span class="fa-stack fa-lg">
                                                    <i class="fa fa-circle fa-stack-2x"></i>
                                                    <i class="fa fa-youtube fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                        </li>
                                    </ul>
                                    <a class="footer_logo" href="http://www.bankizywnosci.pl/"></a>
                                </div>
                                <div class="col-md-12 links mt32">
                                    <div class="copyrights pull-right">
                                        <a href="http://www.wolontariat.bankizywnosci.pl/">© 2015,
                                            <span t-field="res_company.name"/>
                                        </a>
                                    </div>
                                    <ul class="footer_contact">
                                        <li class="">
                                            <a href="/page/contactus">Kontakt</a>
                                        </li>
                                        <li class="">
                                            <a href="/page/regulations">Regulamin</a>
                                        </li>
                                        <li class="">
                                            <a href="/page/privacy_policy">Polityka prywatności</a>
                                        </li>
                                        <li class="">
                                            <a href="/page/about_us">O nas</a>
                                        </li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                    </div>
                </footer>
            </xpath>
        </template>
    </data>
</openerp>
