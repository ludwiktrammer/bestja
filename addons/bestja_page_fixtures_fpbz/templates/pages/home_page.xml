<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="website_embedded.list" name="Homepage">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <section class="oe_snippet_body introduction">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-12 text-center">
                                    <div class="mb32 introduction_header">
                                        <h1 class="mt64 mb32">Rocznie w Polsce marnuje się
                                            <big>9 mln</big>
                                            ton jedzenia
                                            <br/>
                                            <br/>
                                            <big>2,5 mln</big>
                                            osób nie ma dostępu do pełnowartościowej żywności
                                            <br/>
                                            <br/>
                                            Pomóż nam to zmienić!
                                        </h1>
                                    </div>
                                    <div class="text-center">
                                        <h1 class=" text-center text-uppercase choose_place">
                                            wybierz swoją miejscowość
                                        </h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h1 class="text-center mt48 mb48 section_title">
                                        <strong>Dlaczego</strong>
                                        warto z nami działać
                                    </h1>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body">
                        <div class="container why_act_with_us">
                            <div class="row">
                                <div class="col-md-6 mt16 why_act_with_us_picture_container fadeIn">
                                    <img class="img img-responsive shadow mb16"
                                         src="http://lorempixel.com/g/800/700"/>
                                </div>
                                <div class="col-md-6 mt16 fadeIn">
                                    <table class="data_of_acts">
                                        <tr>
                                            <td>
                                                <img class="img img-responsive data_icons"
                                                     src="/bestja_frontend_fpbz/static/src/img/content/ciezarowka-01.svg"/>
                                            </td>
                                            <td>
                                                <h2>Docieramy z żywnością do
                                                    <big>
                                                        <strong>1,3 mln</strong>
                                                    </big>
                                                    osób
                                                </h2>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <img class="img img-responsive data_icons"
                                                     src="/bestja_frontend_fpbz/static/src/img/content/jablko-01.svg"/>
                                            </td>
                                            <td>
                                                <h2>Rozdajemy rocznie
                                                    <big>
                                                        <strong>60 tys.</strong>
                                                    </big>
                                                    ton żywności potrzebującym
                                                </h2>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <img class="img img-responsive data_icons"
                                                     src="/bestja_frontend_fpbz/static/src/img/content/wolontariusze-01.svg"/>
                                            </td>
                                            <td>
                                                <h2>Angażujemy rocznie przy zbiórkach żywności
                                                    <big>
                                                        <strong>51 tys.</strong>
                                                    </big>
                                                    wolontariuszy
                                                </h2>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body mt16 mb16">
                        <div class="container join_us">
                            <div class="row">
                                <div class="text-center">
                                    <a class="text-center mt32 mb32" t-if="website.user_id == user_id"
                                       href="/web/signup">DOŁĄCZ DO NAS
                                    </a>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h1 id="choose_place_title" class="text-center mt48 mb48 section_title">
                                        <strong>Wybierz</strong>
                                        gdzie chciałbyś pomagać
                                    </h1>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body">
                        <div id="map_of_poland_section" class="container map_of_poland_section">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-7 mt16 map_of_poland_container">
                                        <object class="map_object"
                                                data="/bestja_frontend_fpbz/static/src/img/content/wolontariat-mapa-02.svg"
                                                type="image/svg+xml">
                                        </object>
                                    </div>
                                    <div class="col-md-4 mt16 description_of_map_container">
                                        <div>
                                            <p>Twoja organizacja chciałaby z nami współpracować?</p>
                                            <p>
                                                <a href="/page/become_partner">
                                                    <strong>Dowiedz się więcej</strong>
                                                </a>
                                                <t t-if="website.user_id == user_id">lub
                                                    <a href="/web/signup">
                                                        <strong>zostań organizacją partnerską</strong>
                                                    </a>
                                                </t>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body">
                        <div class="container quote_div">
                            <div class="row">
                                <div class="col-md-offset-1 col-md-10 mt64 mb64">
                                    <blockquote>Wolontariat daje mi przede wszystkim satysfakcję z pomagania,
                                        a także możliwość kreatywnego działania. Poznaję nowych ludzi,
                                        uczę się pracy w zespole i rozwijam swoje zainteresowania.
                                    </blockquote>
                                    <span class="description_under_quote">
                                        <strong>Ania</strong>, wolontariuszka Banku Żywności w Olsztynie
                                    </span>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h1 class="text-center mt48 mb48 section_title">
                                        Proces
                                        <strong>rekrutacji</strong>
                                        wolontariuszy
                                    </h1>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body mb16">
                        <div class="container">
                            <div class="row mt16 mb16">
                                <div class="col-xs-6 col-sm-6 col-md-3 text-center recrutation_step_column">
                                    <div class="recrutation_step_number">1</div>
                                    <h2 class="mt32 mb32">Wybór oferty</h2>
                                    <p class="text-muted mt16 mb8 recrutation_step_description">Wybierz oferty w oparciu
                                        o swoje zainteresowania.
                                    </p>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-3 text-center recrutation_step_column">
                                    <div class="recrutation_step_number">2</div>
                                    <h2 class="mt32 mb32">Zgłoszenie</h2>
                                    <p class="text-muted mt16 mb8">Zgłoszenie na ofertę to tylko chwila.</p>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-3 text-center recrutation_step_column">
                                    <div class="recrutation_step_number">3</div>
                                    <h2 class="mt32 mb32">Spotkanie</h2>
                                    <p class="text-muted mt16 mb8">Organizacja zaprosi Cię na spotkanie w ciągu 7 dni.
                                        <br/>
                                        Poznacie swoje oczekiwania i możliwości.
                                    </p>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-3 text-center recrutation_step_column">
                                    <div class="recrutation_step_number">4</div>
                                    <h2 class="mt32 mb32">Zadanie</h2>
                                    <p class="text-muted mt16 mb8">Otrzymasz pierwsze zadanie.
                                        <br/>
                                        Zaproś znajomych do pomocy.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h1 class="text-center mt48 mb48 section_title">
                                        <strong>Poznaj</strong>
                                        naszych wolontariuszy
                                    </h1>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body mt16 mb16">
                        <div class="container meet_our_volunteers">
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="thumbnail">
                                        <img class="img-responsive" src="http://lorempixel.com/g/480/480"/>
                                        <div class="caption text-center">
                                            <h3 class="">Zbieram żywność w lokalnym sklepie</h3>
                                            <p>Magda, Stowarzyszenie Monar, Warszawa</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="thumbnail">
                                        <img class="img-responsive" src="http://lorempixel.com/g/480/480"/>
                                        <div class="caption text-center">
                                            <h3 class="">Jestem grafikiem w banku w Warszawie</h3>
                                            <p class="">
                                                Magda, Stowarzyszenie Monar, Warszawa
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="thumbnail">
                                        <img class="img-responsive" src="http://lorempixel.com/g/480/480"/>
                                        <div class="caption text-center">
                                            <h3 class="">Obsługuję wózek widłowy w magazynie</h3>
                                            <p class="">
                                                McCormik
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body mt16 mb16">
                        <div class="container join_us">
                            <div class="row">
                                <div class="text-center">
                                    <a class="text-center mt32 mb32" t-if="website.user_id == user_id"
                                       href="/web/signup">DOŁĄCZ DO NAS
                                    </a>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h1 class="text-center mt48 mb48 section_title">
                                        <strong>Biuletyn</strong>
                                        wolontariuszy
                                    </h1>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body mt16 mb16">
                        <div class="container volunteers_bulletin">
                            <div class="row">
                                <div class="col-sm-10 col-sm-push-1">
                                    <div id="volunteers_bulletin" class="carousel slide" data-interval="false"
                                         data-wrap="false"
                                         data-ride="carousel">
                                        <!-- Wrapper for slides -->


                                        <div class="carousel-inner" role="listbox">
                                            <div class="item active">
                                                <div class="">
                                                    <div class="row">
                                                        <t t-foreach="objects['biuletyn']" t-as="object">
                                                            <div class="col-xs-4 col-sm-4">
                                                                <a class="thumbnail"
                                                                   t-attf-href="/embedded/{{ slug(object) }}"
                                                                   t-att-title="object.name">
                                                                    <img t-att-src="object.thumbnail_url"
                                                                         t-att-alt="object.name" class="img-polaroid"/>
                                                                    <h4 class="text-center" t-esc="object.name"/>
                                                                </a>
                                                            </div>
                                                            <t t-if="(object_index + 1) % 3 == 0">
                                                                <![CDATA[
                                                                    </div></div></div><div class="item"><div><div class="row">
                                                                ]]>
                                                            </t>
                                                        </t>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Controls -->
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-1 col-sm-pull-10 text-center"
                                     t-if="len(objects['biuletyn']) > 3">
                                    <a class="h1" href="#volunteers_bulletin" role="button"
                                       data-slide="prev">
                                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"/>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </div>
                                <div class="col-xs-6 col-sm-1 text-center" t-if="len(objects['biuletyn']) > 3">
                                    <a class="h1" href="#volunteers_bulletin" role="button"
                                       data-slide="next">
                                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"/>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body mt16 mb16">
                        <div class="container join_us">
                            <div class="row">
                                <div class="text-center">
                                    <a class="text-center mt32 mb32" t-if="website.user_id == user_id"
                                       href="/web/signup">DOŁĄCZ DO NAS
                                    </a>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h1 class="text-center mt48 mb48 section_title">
                                        Zdobądź wiedzę
                                        <strong>wolontariusza zbiórki</strong>
                                    </h1>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body mt16 mb16">
                        <div class="container volunteer_knowlage">
                            <div class="row">
                                <div class="col-sm-10 col-sm-push-1">
                                    <div id="volunteer_knowlage" class="carousel slide" data-interval="false"
                                         data-ride="carousel">
                                        <!-- Wrapper for slides -->
                                        <div class="carousel-inner" role="listbox">
                                            <div class="item active">
                                                <div class="">
                                                    <div class="row">
                                                        <t t-foreach="objects['elearning']" t-as="object">
                                                            <div class="col-xs-4 col-sm-4">
                                                                <a class="thumbnail"
                                                                   t-attf-href="/embedded/{{ slug(object) }}"
                                                                   t-att-title="object.name">
                                                                    <img t-att-src="object.thumbnail_url"
                                                                         t-att-alt="object.name" class="img-polaroid"/>
                                                                    <h4 class="text-center" t-esc="object.name"/>
                                                                </a>
                                                            </div>
                                                            <t t-if="(object_index + 1) % 3 == 0">
                                                                <![CDATA[
                                                                    </div></div></div><div class="item"><div><div class="row">
                                                                ]]>
                                                            </t>
                                                        </t>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Controls -->
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-1 col-sm-pull-10 text-center"
                                     t-if="len(objects['elearning']) > 3">
                                    <a class="h1" href="#volunteer_knowlage" role="button"
                                       data-slide="prev">
                                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true" />
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </div>
                                <div class="col-xs-6 col-sm-1 text-center" t-if="len(objects['elearning']) > 3">
                                    <a class="h1" href="#volunteer_knowlage" role="button" data-slide="next">
                                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true" />
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </section>

                </div>
            </t>
        </template>
    </data>
</openerp>
