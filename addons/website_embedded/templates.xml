<openerp>
    <data>
        <template id="list">
            <t t-call="website.layout">
                <ul>
                    <li t-foreach="objects['biuletyn']" t-as="object">
                        <a t-attf-href="/embedded/{{ slug(object) }}">
                            <t t-esc="object.name"/>
                            <img t-att-src="object.thumbnail_url" t-att-alt="object.name"/>
                        </a>
                        <hr/>
                    </li>
                </ul>
            </t>
        </template>
        <template id="detail">
            <t t-call="website.layout">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12">
                            <h1 t-field="object.name"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-8 col-md-offset-2">
                            <div class="embed-responsive embed-responsive-16by9">
                                <t t-raw="object.embed_code"/>
                                <!--<iframe class="" src="..."></iframe>-->
                            </div>

                            <t t-if="object.description and object.description.strip()">
                                <p t-field="object.description"/>
                            </t>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</openerp>
